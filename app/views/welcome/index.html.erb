<DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Displaying text directions with <code>setPanel()</code></title>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
  </head>
  <body>

  <div class="container borderRed">
    <form id="pointAB" role="form">
      <div class="row">
        <div class="col-xs-12">
          <label for="pointA">Start:</label>
          <input id="start" type="text" class="form-control searchBar" data-bind="value:start" placeholder="Current Location"/>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <label for="pointB">End:</label>
          <input id="end" type="text" class="form-control searchBar" data-bind="value:end" placeholder="Destination"/>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <button class="btn gobtn" onclick="calcRoute(); hideMessage();">Get Directions</button>
        </div>
      </div>
    </form>
    </div>

    <div id="map-canvas"></div>
    <div id="directions-panel">
      <div id="init-message">
        <p>Please Select Point A and B</p>
      </div>
      <div id = "err-message" class="alert alert-danger" role="alert">
        <p id="ErrorMessage"></p>
      </div>
    </div>
    <div id="station-info">
      <p>Station Info:</p>
      <p id="train"></p>
      <p id="train-stop-depart"></p>
      <p id="train-stop-end"></p>
      <p id="num-stop"></p>
      <p id="arrival_time"></p>
      <p id="departure_time"></p>
      <p id="distance"></p>
      <p id="duration"></p>
      <!-- <%= link_to "an article", @station%> -->
      <!-- <div id="info"></div> -->
    </div>
  </body>
</html>